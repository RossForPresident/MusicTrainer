<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rosswilhite.mustrainer.Trainer">

    <TextView
        android:text="Tuner."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pagename"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/monOct"
        android:layout_alignRight="@id/pagename"
        android:layout_marginRight="15dp"
        android:layout_above="@id/pagename"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 HZ"
        android:id="@+id/monHZ"
        android:layout_toRightOf="@+id/monOct"
        android:layout_above="@+id/monOct" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/monPitch"
        android:textSize="72dp"
        android:layout_above="@id/monOct"
        android:layout_toLeftOf="@id/monHZ" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/presence_invisible"
        android:id="@+id/TunerDot"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cents"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:text="In Tune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IntonationLabeln"
        android:layout_alignTop="@id/cents"
        android:layout_toRightOf="@id/cents"
        android:layout_toEndOf="@id/cents"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="Sharp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IntonationLabels"
        android:layout_alignLeft="@+id/IntonationLabeln"
        android:layout_above="@+id/IntonationLabeln"
        android:layout_marginBottom="60dp" />

    <TextView
        android:text="Flat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IntonationLabelf"
        android:layout_alignLeft="@+id/IntonationLabeln"
        android:layout_below="@+id/IntonationLabeln"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="0 cents"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/monOct"
        android:layout_marginLeft="5dp"
        android:gravity="right"
        android:id="@+id/cents" />

</RelativeLayout>
